			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>Portlet by Andrea</title>
			<short-title>andrea-portlet</short-title>
			<keywords>andrea-portlet</keywords>
		</portlet-info>
