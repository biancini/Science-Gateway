      	<init-param>
          		<name>2_enableInfrastructure</name>
          		<value>yes</value>
      	</init-param>
		<init-param>    
			<name>2_wmsHosts</name>
			<value>wms://wms014.cnaf.infn.it:7443/glite_wms_wmproxy_server</value>
		</init-param>
		<init-param>
			<name>2_pxServerHost</name>
			<value>myproxy.ct.infn.it</value>
